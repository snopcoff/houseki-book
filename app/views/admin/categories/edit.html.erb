<% provide :title, t("categoryindex.create_category") %>
<h1 class="text-center"><%= t :edit %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
    <%= form_for [:admin, @category] do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      </br>
      <%= f.submit t(:edit), class: "btn btn-primary width" %>
    <% end %>
  </div>
</div>
